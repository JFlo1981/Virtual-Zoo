<div class="text-center login-page">
    <div class="heroImage">
    </div>
    <form id="Form">
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

        <div class="form-floating">
            <input type="email" class="form-control" placeholder="name@example.com" id="username" required>
            <label>Email address</label>
        </div>
        <div class="form-floating">
            <input class="form-control" placeholder="Password" id="password" required>
            <label>Password</label>
        </div>

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit" id="signIn" value="Login">Sign in</button>
        <div>
            <p class="mt-3 mb-1">New to the Zoo?</p>
            <a href="/sign-up">Sign Up Here</a>
        </div>
        <p class="mt-5 mb-3 text-muted">&copy; Zoolander2022</p>
    </form>
</div>
