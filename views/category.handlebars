<section style="background-color: #111112">
  <div
    style="
  width: 100%;
  height: 300px;
  background-size: cover;
  background-image: url({{category.imagePath}});
  "
  >
    <div class="container">
      <div class="row d-flex justify-content-center" style="padding-top: 75px">
        <h1 class="col-12 category_Title" style="color: white">
          {{category.title}}</h1>
        <p class="category_page_description col-10">
          {{category.description}}
        </p>
      </div>
    </div>
  </div>
  <h2 class="category_sub_title">Watch Now</h2>
  <hr style="border-top: 1px solid #666666ff" />
  <div class="container">
    <div class="row d-flex justify-content-between">

      <!-- FOR EACH VIDEO, CREATE A VIDEO-CARD WITH THUMBNAIL AND ID -->
      {{#each category.videos}}
        <div id="category-video-card" class="col-lg-4 p-3">
          <a href="/video/{{id}}">
            <img
              src="{{thumbnail}}"
              class="col-12 p-3"
              style="border-radius: 25px"
            />
          </a>
        </div>
      {{/each}}

    </div>
  </div>
</section>

